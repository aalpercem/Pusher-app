<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notificationsImageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/avatarnew"
            app:civ_border_color="@color/yellow_project"
            app:civ_border_width="2dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/notificationsUsername"
            android:layout_width="234dp"
            android:layout_height="24dp"
            android:layout_below="@+id/notificationsAcıklama"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="29dp"
            android:layout_toEndOf="@+id/notificationsImageView"
            android:text="oyununuza katılmak istiyor."
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/notificationsAcıklama"
            android:layout_width="234dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="90dp"
            android:layout_toEndOf="@+id/notificationsImageView"
            android:text="Username"
            android:textSize="18sp">

        </TextView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/notificationsKabulButton"
            android:layout_width="70dp"
            android:layout_height="33dp"

            android:layout_below="@+id/notificationsUsername"
            android:layout_marginStart="14dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/notificationsImageView"
            android:text="kabul et"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="8sp"
            android:textStyle="bold"
            app:cornerRadius="20dp">

            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/notificationsReddetButton"
            android:layout_width="70dp"
            android:layout_height="33dp"

            android:layout_below="@+id/notificationsUsername"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="95dp"
            android:layout_toEndOf="@+id/notificationsKabulButton"
            android:text="reddet"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="8sp"
            android:textStyle="bold"
            app:cornerRadius="20dp">

        </com.google.android.material.button.MaterialButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/notificationsImageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:text="Time"
            android:textSize="10sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>